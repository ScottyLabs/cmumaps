{
  "name": "cmumaps",
  "version": "0.0.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "@types/web": "^0.0.279",
    "husky": "^8.0.3",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.2.10",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "bun run syncpack && turbo check",
    "dev:server": "turbo dev --filter=@cmumaps/server",
    "dev:visualizer": "turbo dev --filter=@cmumaps/visualizer --filter=@cmumaps/server",
    "dev:web": "turbo dev --filter=@cmumaps/web --filter=@cmumaps/server",
    "dev:web:host": "turbo dev:host --filter=@cmumaps/web --filter=@cmumaps/server",
    "format": "turbo format",
    "lint": "turbo lint",
    "preinstall": "npx only-allow bun",
    "prepare": "husky && husky install",
    "secrets:pull": "./scripts/secrets-pull.sh",
    "secrets:push": "./scripts/secrets-push.sh",
    "secrets:setup": "VAULT_ADDR=https://secrets.scottylabs.org vault login -method=oidc",
    "start": "turbo start",
    "syncpack": "syncpack format && syncpack lint",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:update": "syncpack update",
    "tsc": "turbo tsc"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
