{
  "name": "@cmumaps/server",
  "version": "0.0.0",
  "dependencies": {
    "@cmumaps/common": "workspace:*",
    "@cmumaps/websocket": "workspace:*",
    "@prisma/client": "6.12.0",
    "@types/swagger-ui-express": "4.1.8",
    "cors": "2.8.5",
    "express": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.2.0",
    "socket.io": "4.8.1",
    "swagger-ui-express": "5.0.1",
    "tsoa": "6.6.0",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@types/cors": "~2.8.17",
    "@types/express": "~5.0.0",
    "@types/jsonwebtoken": "~9.0.10",
    "@types/node": "~24.0.13",
    "concurrently": "~9.2.0",
    "dotenv-cli": "~8.0.0",
    "esbuild": "~0.25.6",
    "globals": "~16.3.0",
    "onchange": "~7.1.0",
    "openapi-typescript": "~7.8.0",
    "prisma": "~6.12.0",
    "tsx": "~4.20.3",
    "typescript": "~5.8.3"
  },
  "keywords": [],
  "license": "ISC",
  "scripts": {
    "build": "bun build server.ts --outdir=dist --target=bun --sourcemap",
    "check": "tsc -b && biome check",
    "db-generate": "prisma generate",
    "dev": "concurrently 'bun run server' 'bun run tsoa' 'bun run openapi'",
    "dev:host": "bun run dev",
    "format": "biome format",
    "lint": "biome lint",
    "openapi": "onchange './build/swagger.yaml' -- bun run openapi:build",
    "openapi:build": "openapi-typescript ./build/swagger.yaml -o ./build/swagger.d.ts",
    "server": "dotenv -e .env -- tsx watch server.ts",
    "start": "bun dist/server.js",
    "tsc": "tsc -b",
    "tsoa": "onchange 'src/controllers/*.ts' 'tsoa.json' -- bun run tsoa:build",
    "tsoa:build": "tsoa spec-and-routes"
  },
  "type": "module"
}
