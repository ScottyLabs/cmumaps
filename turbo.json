{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:host": {
      "cache": false,
      "persistent": true
    },
    "@cmumaps/server#db-generate": {},
    "@cmumaps/server#tsoa": {},
    "@cmumaps/server#openapi": {
      "dependsOn": ["@cmumaps/server#tsoa"]
    },
    "@cmumaps/server#build": {
      "dependsOn": ["@cmumaps/server#db-generate", "@cmumaps/server#openapi"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY",
        "ALLOWED_ORIGINS_REGEX",
        "DATABASE_URL",
        "VITE_MAPKIT_TOKEN",
        "VITE_SERVER_URL",
        "VITE_CLERK_PUBLISHABLE_KEY"
      ]
    },
    "start": {
      "dependsOn": ["^start", "^build"]
    },
    "format": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "persistent": true
    },
    "tsc": {
      "cache": false,
      "persistent": true
    },
    "check": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@cmumaps/server#db-generate", "@cmumaps/server#openapi"]
    }
  }
}
